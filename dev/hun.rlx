DELIMITERS = "<.>" "<!>" "<?>" "<;>" "<...>";

#SETS

# Articles
LIST ART    = det ;
# Demonstratives -- these can also appear in predet position
LIST DEM    = "az" "ez" "amaz" "emez" ;
LIST NOUN = n np ;

CONSTRAINTS

############
# az       #
############

# Before an ADJ or NOUN, "az" is a <det>
#SELECT (det) IF (0 ("az") LINK 1 (adj) OR (n))
"<az>" SELECT (det) IF (1 (adj) OR (n))
"<Az>" SELECT (det) IF (1 (adj) OR (n))

# Before an article, demonstratives are <predet>
#SELECT (predet) IF (0 DEM LINK 1C ART)
#SELECT (predet) IF (0 DEM) (1C ART)
SELECT (predet) + DEM IF (1C ART)

############
# NP-stuff #
############
REMOVE (n) IF (-1C (adv));
